@model IEnumerable<NguyenQuocHuy.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h2>Danh sách người dùng</h2>

<a asp-action="Create" class="btn btn-primary">Thêm người dùng mới</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>UserId</th>
            <th>UserName</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Password</td>
                <td>@user.Phone</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
