@{
    ViewData["Title"] = "Quên mật khẩu";
}
<h2 class="mb-4">Quên mật khẩu</h2>
<form asp-action="ForgotPassword" method="post" class="w-100" style="max-width:400px;">
    <div class="mb-3">
        <label class="form-label">Nhập email đã đăng ký</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <button type="submit" class="btn btn-primary w-100">Gửi mã xác nhận</button>
</form> 